<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0">

  <OCD description="phomenet-service-db" name="com.pigglogic.phomenet.service.db" id="com.pigglogic.phomenet.service.db">

    <AD name="Database URL"  id="javax.persistence.jdbc.url" required="true" type="String" default="jdbc:derby:data/phomenetdb;create=true"/>
    <AD name="Database user name"  id="javax.persistence.jdbc.user" required="false" type="String"/>
    <AD name="Database password"  id="javax.persistence.jdbc.password" required="false" type="String"/>
    <AD name="Driver" id="javax.persistence.jdbc.driver" required="true" type="String" default="org.apache.derby.jdbc.EmbeddedDriver"/>
  </OCD>

    <Designate pid="com.pigglogic.phomenet.service.db">
        <Object ocdref="com.pigglogic.phomenet.service.db"/>
    </Designate>

</metatype:MetaData>